@model IEnumerable<EPSN.Group>
@{
    ViewBag.Title = "Index";
}
<div class="breadcrumb-area bg-color ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-title text-center">
                    <h1>My courses</h1>
                    <div class="breadcrumb-menu">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="container">
    <!-- Page Features -->
    <div class="row text-center" style="margin-top:10px; margin-bottom:20px;">
        @foreach (var courseItem in Model)
        {
        <div class="col-lg-3 col-md-6 mb-4">
            <div style="margin-top:10px;">
                <div class="card h-100">
                    <img class="card-img-top" style="width:300px; height:150px" src="~/Uploads/@courseItem.Image_Group" alt="">
                    <div class="card-body">
                        <h4 class="card-title">@courseItem.Name</h4>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("Lessons", "Home", new { id = courseItem.ID})" class="btn btn-primary">Sratr NoW</a>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>