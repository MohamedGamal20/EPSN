@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown" style="margin-top:10px;">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Hello! @User.Identity.GetUserName()
                </a>
                <ul class="dropdown-menu" style=" background-color: white;">
                    <li>
                        <div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <p>
                                        <a href="~/Course/Index" class=" btn-block" style="color:#00a86a;">My Courses</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="divider" style="background:#00a86a"></li>

                    <li>
                        <div style="padding:5px; padding-bottom:0px; width:50px;">
                            <div class="row">
                                <div class="col-lg-12">
                                    <a href="~/Manage/Index" class=" btn-block" style="color:#00a86a;">Settings</a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="divider" style="background:#00a86a"></li>
                    <li>
                        <div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <p>
                                        <a style="color:#00a86a;" href="javascript:sessionStorage.removeItem('accessToken');$('#logoutForm').submit();">Log out</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>

                </ul>
            </li>
        </ul>

    }
}
else
{

        
<ul class="nav navbar-nav navbar-right">
    <li class="dropdown" style="margin-top:10px;">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Get membership
        </a>
        <ul class="dropdown-menu" style=" background-color: white;">
            <li style="margin-top:10px; background:#00a86a; text-align:center">@Html.ActionLink("Sign up", "Register", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "registerLink" })</li>
            <li style="margin-top:10px;  background:#00a86a; text-align:center">@Html.ActionLink("Log in", "Login", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    </li>
    </ul>

        }